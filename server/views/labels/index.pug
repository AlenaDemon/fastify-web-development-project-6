extends ../layouts/application.pug

block header 
  =t('views.labels.labels')
  
block headerAction
  a.btn.btn-primary(href="/labels/new")= t('views.labels.create')

block content
  div.table-responsive
    table.table.table-borderless.table-striped.mt-5.bg-white
      thead
        tr
          th= t('views.labels.id')
          th= t('views.labels.name')
          th= t('views.labels.createdAt')
      tbody
        each label in labels
          tr
            td= label.id
            td= label.name
            td= formatDate(label.createdAt)
            td
              div.d-flex.flex-wrap
                a.btn.btn-primary.me-1(href=route('updateLabel', { "id": label.id.toString() }))= t('views.change')
                +buttonTo(`/labels/${label.id}`, 'delete')(
                  class="btn btn-danger"
                  value=t('views.delete')
                  method="delete"
                )