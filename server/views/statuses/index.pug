extends ../layouts/application.pug

block header 
  =t('views.statuses.statuses')
  
block headerAction
  a.btn.btn-primary(href="/statuses/new")= t('views.statuses.create')

block content
  div.table-responsive
    table.table.table-borderless.table-striped.mt-5.bg-white
      thead
        tr
          th= t('views.statuses.id')
          th= t('views.statuses.name')
          th= t('views.statuses.createdAt')
      tbody
        each status in statuses
          tr
            td= status.id
            td= status.name
            td= formatDate(status.createdAt)
            td
              div.d-flex.flex-wrap
                a.btn.btn-primary.me-1(href=route('updateStatus', { "id": status.id.toString() }))= t('views.change')
                +buttonTo(`/statuses/${status.id}`, 'delete')(
                  class="btn btn-danger"
                  value=t('views.delete')
                  method="delete"
                )