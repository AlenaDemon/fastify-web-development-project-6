extends ../layouts/application.pug

block header
  = t('views.tasks.new.create')

block content
  +formFor()(action=route('taskNew') method="post")
    +input(task, 'name', errors)(type="text")
    +textarea(task, 'description', errors)(type="text")
    +select(task, 'statusId', statuses, errors)
    +select(task, 'executorId', users, errors)
    +multiselect(task, 'labels', labels, error)
    +submit(task)(value=t('views.tasks.new.submit'))